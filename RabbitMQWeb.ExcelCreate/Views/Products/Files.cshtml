@model List<UserFile>
@{
    ViewData["Title"] = "Files";
}

@section Scripts
{ 
    <script>
        $(document).ready(function () {
            var hasStartCreatingExcel = '@TempData["StartCreatingExcel"]';

            if (hasStartCreatingExcel) {
                Swal.fire({
                    position: 'top-end',
                    icon: 'success',
                    title: 'Excel oluşturma işlemi başlamıltır. Bittiğinde bildiri alacaksınız',
                    showConfirmButton: false,
                    timer:2500
                })
            }
        })
    </script>
}

<h1>Files</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Created Date</th>
            <th>File Status</th>
            <th>Donwload</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FileName</td>
            <td>@item.GetCreateDate</td>
            <td>@item.FileStatus</td>
            <td>
                <a href="~/files/@item.FilePath" class="btn btn-primary @(item.FileStatus==FileStatus.Creating ? "disable":"")">Download</a>
            </td>
        </tr>
    }
</table>
